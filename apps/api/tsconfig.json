{
  "compilerOptions": {
    "allowJs": true,
    "maxNodeModuleJsDepth": 10,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": [
      "ESNext",
      "esnext.asynciterable"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@graphql/*": ["./src/graphql/*"],
      "utility/*": ["./src/utils/*"],
      "test/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*", "./test/**/*"]
}
